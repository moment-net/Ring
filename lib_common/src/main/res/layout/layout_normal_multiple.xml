<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/shape_white10"
        binding:layout_constraintBottom_toBottomOf="parent"
        binding:layout_constraintEnd_toEndOf="parent"
        binding:layout_constraintStart_toStartOf="parent"
        binding:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/dimen45"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/_3A3A3A"
            android:textSize="16sp"
            binding:layout_constraintEnd_toEndOf="parent"
            binding:layout_constraintStart_toStartOf="parent"
            binding:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            binding:layout_goneMarginTop="@dimen/dimen45"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/_3A3A3A"
            android:textSize="16sp"
            binding:layout_constraintEnd_toEndOf="parent"
            binding:layout_constraintStart_toStartOf="parent"
            binding:layout_constraintTop_toBottomOf="@+id/tv_title" />


        <leifu.shapelibrary.ShapeView
            android:id="@+id/tv_cancel"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16sp"
            binding:layout_constraintBottom_toBottomOf="parent"
            binding:layout_constraintEnd_toStartOf="@+id/tv_confirm"
            binding:layout_constraintHorizontal_chainStyle="packed"
            binding:layout_constraintStart_toStartOf="parent"
            binding:layout_constraintTop_toBottomOf="@+id/tv_content"
            android:padding="0dp"
            binding:sCorners="8dp"
            binding:sSolidColor="@color/_8D8C96"
            binding:sStrokeColor="@color/_8D8C96"
            binding:sStrokeWidth="0dp" />

        <leifu.shapelibrary.ShapeView
            android:id="@+id/tv_confirm"
            android:layout_width="125dp"
            android:layout_height="38dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="16sp"
            binding:layout_constraintBottom_toBottomOf="parent"
            binding:layout_constraintEnd_toEndOf="parent"
            binding:layout_constraintStart_toEndOf="@+id/tv_cancel"
            binding:layout_constraintTop_toBottomOf="@+id/tv_content"
            binding:sCorners="8dp"
            binding:sSolidColor="@color/_FFBD2A"
            binding:sStrokeColor="@color/_FFBD2A"
            binding:sStrokeWidth="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

