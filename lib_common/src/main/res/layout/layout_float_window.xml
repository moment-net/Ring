<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_call_voice"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/shape_float_left"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_calling"
            android:layout_width="@dimen/dimen56"
            android:layout_height="@dimen/dimen56"
            android:background="@drawable/icon_float_bg"
            android:text="呼叫中"
            android:textColor="@color/_C3911E"
            android:textSize="14sp"
            android:gravity="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_time"
            android:layout_width="@dimen/dimen56"
            android:layout_height="@dimen/dimen56"
            android:visibility="gone"
            android:background="@drawable/icon_float_bg">


            <com.alan.mvvm.common.views.MyChronometer
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/_C3911E"
                android:textSize="14sp"
                android:includeFontPadding="false"
                app:layout_constraintBottom_toTopOf="@+id/tv_time2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通话中"
                android:textSize="10sp"
                android:textColor="@color/_80C3911E"
                android:includeFontPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_time" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>


</RelativeLayout>