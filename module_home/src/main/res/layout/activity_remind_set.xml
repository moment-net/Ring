<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/dimen46">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="设置提醒"
            android:textColor="@color/_3A3A3A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <leifu.shapelibrary.ShapeView
            android:id="@+id/tv_right"
            android:layout_width="52dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:sCorners="10dp"
            app:sSolidColor="@color/_FFBD2A"
            app:sStrokeColor="@color/_3A3A3A"
            app:sStrokeWidth="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/home_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="提醒内容"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen46"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_input6"
                android:hint="给提醒设置一个名字吧！"
                android:paddingStart="@dimen/dimen15"
                android:paddingEnd="@dimen/dimen50"
                android:textColor="@color/black"
                android:textColorHint="@color/black20"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_textview2" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="11/15"
                android:textColor="@color/black50"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_name"
                app:layout_constraintEnd_toEndOf="@+id/et_name"
                app:layout_constraintTop_toTopOf="@+id/et_name" />

            <TextView
                android:id="@+id/home_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="提醒铃声"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_name" />

            <leifu.shapelibrary.ShapeView
                android:id="@+id/tv_ring"
                android:layout_width="@dimen/dimen60"
                android:layout_height="@dimen/dimen24"
                android:layout_marginEnd="20dp"
                android:padding="0dp"
                android:text="更换铃声"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/home_textview4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/home_textview4"
                app:sCorners="4dp"
                app:sSolidColor="@color/_FFBD2A"
                app:sStrokeColor="@color/_3A3A3A"
                app:sStrokeWidth="0dp" />

            <ImageView
                android:id="@+id/iv_ring"
                android:layout_width="@dimen/dimen100"
                android:layout_height="@dimen/dimen100"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_remind_ring"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_textview4" />

            <TextView
                android:id="@+id/home_textview15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="重复"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_ring" />


            <TextView
                android:id="@+id/tv_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:drawableEnd="@drawable/icon_bing_right"
                android:drawablePadding="@dimen/dimen10"
                android:paddingTop="@dimen/dimen5"
                android:paddingBottom="@dimen/dimen5"
                android:text="不重复"
                app:layout_constraintBottom_toBottomOf="@+id/home_textview15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/home_textview15" />


            <TextView
                android:id="@+id/home_textview10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="时间"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_textview15" />

            <leifu.shapelibrary.ShapeView
                android:id="@+id/tv_time"
                android:layout_width="@dimen/dimen74"
                android:layout_height="@dimen/dimen24"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/icon_remind_add"
                android:paddingStart="@dimen/dimen6"
                android:paddingTop="@dimen/dimen0"
                android:paddingEnd="@dimen/dimen6"
                android:paddingBottom="@dimen/dimen0"
                android:text="添加时间"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/home_textview10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/home_textview10"
                app:sCorners="4dp"
                app:sSolidColor="@color/_FFBD2A"
                app:sStrokeColor="@color/_3A3A3A"
                app:sStrokeWidth="0dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_time"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen50"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_textview10" />

            <TextView
                android:id="@+id/home_textview13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="日期"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_time" />

            <leifu.shapelibrary.ShapeView
                android:id="@+id/tv_data"
                android:layout_width="@dimen/dimen74"
                android:layout_height="@dimen/dimen24"
                android:layout_marginEnd="20dp"
                android:paddingStart="@dimen/dimen6"
                android:paddingTop="@dimen/dimen0"
                android:paddingEnd="@dimen/dimen6"
                android:paddingBottom="@dimen/dimen0"
                android:text="添加日期"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/home_textview13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/home_textview13"
                app:sCorners="4dp"
                app:sSolidColor="@color/_FFBD2A"
                app:sStrokeColor="@color/_3A3A3A"
                app:sStrokeWidth="0dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_data"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen50"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_textview13" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>