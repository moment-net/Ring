<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dimen90"
        android:layout_height="@dimen/dimen90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_placeholder" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_choose"
        android:layout_width="@dimen/dimen76"
        android:layout_height="@dimen/dimen26"
        android:text="选择铃声"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
        android:padding="0dp"
        app:sCorners="6dp"
        app:sSolidColor="@color/_FFC843"
        app:sStrokeColor="@color/_3A3A3A"
        app:sStrokeWidth="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>