<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="10:00"
        android:textColor="@color/black50"
        android:textSize="12sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:src="@drawable/icon_placeholder" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        android:autoLink="web"
        android:gravity="center|left"
        android:lineSpacingExtra="2dp"
        android:maxWidth="225.0dip"
        android:paddingStart="@dimen/dimen14"
        android:paddingEnd="@dimen/dimen14"
        android:paddingTop="@dimen/dimen10"
        android:paddingBottom="@dimen/dimen10"
        android:background="@drawable/shape_receive_bg14"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

    <TextView
        android:id="@+id/tv_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:visibility="gone"
        android:textColor="@color/_803B3B3B"
        android:textSize="10sp"
        android:gravity="center|left"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:maxWidth="@dimen/dimen210"
        android:paddingStart="@dimen/dimen10"
        android:paddingEnd="@dimen/dimen10"
        android:paddingTop="@dimen/dimen6"
        android:paddingBottom="@dimen/dimen6"
        android:background="@drawable/shape_msg_extra_bg4"
        app:layout_constraintStart_toStartOf="@+id/tv_msg"
        app:layout_constraintTop_toBottomOf="@+id/tv_msg" />
</androidx.constraintlayout.widget.ConstraintLayout>