<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PersonInfoActivity"
    tools:ignore="MissingDefaultResource,ResourceName">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/dimen46"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="完善个人信息"
            android:textColor="@color/_3A3A3A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/icon_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="52dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_title_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="性别"
                android:textColor="@color/_3A3A3A"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/tv_title_gender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_title_gender">

                <RadioButton
                    android:id="@+id/rb_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:drawableLeft="@drawable/select_sex_boy_small"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="男"
                    android:clickable="false"
                    android:textColor="@color/_B3343333"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/rb_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="36dp"
                    android:background="@color/transparent"
                    android:button="@null"
                    android:drawableLeft="@drawable/select_sex_girl_small"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="女"
                    android:clickable="false"
                    android:textColor="@color/_B3343333"
                    android:textSize="16sp" />
            </RadioGroup>

            <ImageView
                android:id="@+id/iv_avator"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/icon_placeholder"
                android:padding="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_gender" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:includeFontPadding="false"
                android:text="头像"
                android:textColor="@color/_3A3A3A"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_avator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:includeFontPadding="false"
                android:text="(点击头像修改)"
                android:textColor="@color/_9D9797"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/textView26" />


            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="昵称"
                android:textColor="@color/_3A3A3A"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_avator" />

            <leifu.shapelibrary.ShapeView
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入昵称"
                android:inputType="textPersonName"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="95dp"
                android:textColor="@color/_B3343333"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView27"
                app:isEditText="true"
                app:sGravity="left"
                app:sCorners="4dp"
                app:sSolidColor="@color/_073A3A3A"
                app:sStrokeColor="@color/_073A3A3A"
                app:sStrokeWidth="0dp" />

            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="0/15"
                android:textColor="@color/_807FA4"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_name"
                app:layout_constraintEnd_toEndOf="@+id/et_name"
                app:layout_constraintTop_toTopOf="@+id/et_name" />


            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="生日"
                android:textColor="@color/_3A3A3A"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_name" />

            <TextView
                android:id="@+id/tv_birthday_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableRight="@drawable/icon_bing_right"
                android:drawablePadding="7dp"
                android:gravity="right"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="请选择"
                android:textColor="@color/_898989"
                android:textSize="15sp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_birthday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_birthday"
                app:layout_constraintTop_toTopOf="@+id/tv_birthday" />


            <TextView
                android:id="@+id/tv_hometown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="地址"
                android:textColor="@color/_3A3A3A"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_birthday" />

            <TextView
                android:id="@+id/tv_hometown_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableRight="@drawable/icon_bing_right"
                android:drawablePadding="7dp"
                android:gravity="right"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="请选择"
                android:textColor="@color/_898989"
                android:textSize="15sp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_hometown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_hometown"
                app:layout_constraintTop_toTopOf="@+id/tv_hometown" />


            <TextView
                android:id="@+id/tv_worktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="工作时间"
                android:textColor="@color/_3A3A3A"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_hometown" />

            <TextView
                android:id="@+id/tv_worktime_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableRight="@drawable/icon_bing_right"
                android:drawablePadding="7dp"
                android:gravity="right"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="请选择"
                android:textColor="@color/_898989"
                android:textSize="15sp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_worktime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_worktime"
                app:layout_constraintTop_toTopOf="@+id/tv_worktime" />


            <TextView
                android:id="@+id/tv_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="管家类型"
                android:textColor="@color/_3A3A3A"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_worktime" />

            <TextView
                android:id="@+id/tv_manager_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableRight="@drawable/icon_bing_right"
                android:drawablePadding="7dp"
                android:gravity="right"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="请选择"
                android:textColor="@color/_898989"
                android:textSize="15sp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_manager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_manager"
                app:layout_constraintTop_toTopOf="@+id/tv_manager" />

            <TextView
                android:id="@+id/tv_skil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="职业技能"
                android:textColor="@color/_3A3A3A"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_manager" />

            <TextView
                android:id="@+id/tv_skil_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableRight="@drawable/icon_bing_right"
                android:drawablePadding="7dp"
                android:gravity="right"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="请选择"
                android:textColor="@color/_898989"
                android:textSize="15sp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_skil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_skil"
                app:layout_constraintTop_toTopOf="@+id/tv_skil" />


            <TextView
                android:id="@+id/tv_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="语音签名"
                android:textColor="@color/_3A3A3A"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_skil" />

            <leifu.shapelibrary.ShapeView
                android:id="@+id/tv_play"
                android:layout_width="@dimen/dimen42"
                android:layout_height="@dimen/dimen20"
                android:padding="0dp"
                android:text="试听"
                android:textColor="@color/_E67F34"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/tv_voice"
                app:layout_constraintStart_toEndOf="@+id/tv_voice"
                app:layout_constraintTop_toTopOf="@+id/tv_voice"
                app:sCorners="10dp"
                android:layout_marginStart="@dimen/dimen10"
                app:sSolidColor="@color/_33FFAF4D"
                app:sStrokeColor="@color/_3A3A3A"
                app:sStrokeWidth="0dp" />

            <TextView
                android:id="@+id/tv_voice_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:drawableRight="@drawable/icon_bing_right"
                android:drawablePadding="7dp"
                android:gravity="right"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="录制语音签名"
                android:textColor="@color/_898989"
                android:textSize="15sp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="@+id/tv_voice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_play"
                app:layout_constraintTop_toTopOf="@+id/tv_voice" />


            <leifu.shapelibrary.ShapeView
                android:id="@+id/tv_commit"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_voice"
                app:layout_constraintVertical_bias="1.0"
                app:layout_goneMarginTop="132dp"
                app:sCorners="4dp"
                app:sDisableColor="@color/_988778"
                app:sNormalColor="@color/_FFBD2A"
                app:sStrokeColor="@color/_3A3A3A"
                app:sStrokeWidth="0dp"
                app:sUseSelector="true" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>