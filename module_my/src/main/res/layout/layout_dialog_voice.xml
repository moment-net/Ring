<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/my_imageview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icon_voice_bg" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lv_wave"
        android:layout_width="108dp"
        android:layout_height="26dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="@+id/my_imageview2"
        app:layout_constraintStart_toStartOf="@+id/my_imageview2"
        app:layout_constraintTop_toTopOf="@+id/my_imageview2"
        app:lottie_fileName="lottie_wave.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/my_imageview2"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:src="@drawable/icon_voice_cancel" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="10s"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/my_imageview2"
        app:layout_constraintStart_toStartOf="@+id/my_imageview2"
        app:layout_constraintTop_toBottomOf="@+id/my_imageview2" />

    <ImageView
        android:id="@+id/iv_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/my_imageview2"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        android:src="@drawable/icon_voice_commit" />

</androidx.constraintlayout.widget.ConstraintLayout>