<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginStart="35dp"
    android:layout_marginEnd="35dp"
    android:background="@drawable/shape_white10"
    binding:layout_constraintBottom_toBottomOf="parent"
    binding:layout_constraintEnd_toEndOf="parent"
    binding:layout_constraintStart_toStartOf="parent"
    binding:layout_constraintTop_toTopOf="parent">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="提示"
        android:textColor="@color/_3A3A3A"
        android:textSize="18sp"
        binding:layout_constraintEnd_toEndOf="parent"
        binding:layout_constraintStart_toStartOf="parent"
        binding:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="请确认您提现的微信号"
        android:textColor="@color/_3A3A3A"
        android:textSize="16sp"
        binding:layout_constraintEnd_toEndOf="parent"
        binding:layout_constraintStart_toStartOf="parent"
        binding:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="zhishuoapp"
        android:textColor="@color/_3A3A3A"
        android:textSize="16sp"
        binding:layout_constraintEnd_toEndOf="parent"
        binding:layout_constraintStart_toStartOf="parent"
        binding:layout_constraintTop_toBottomOf="@+id/tv_content" />


    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="更改微信"
        android:textColor="@color/_B63E3E"
        android:textSize="14sp"
        binding:layout_constraintEnd_toEndOf="parent"
        binding:layout_constraintStart_toStartOf="parent"
        binding:layout_constraintTop_toBottomOf="@+id/tv_info" />


    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_cancle"
        android:layout_width="125dp"
        android:layout_height="38dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="取消"
        android:textColor="@color/_959595"
        android:textSize="16sp"
        app:sCorners="4dp"
        app:sSolidColor="@color/white"
        app:sStrokeColor="@color/_959595"
        app:sStrokeWidth="1dp"
        binding:layout_constraintBottom_toBottomOf="parent"
        binding:layout_constraintEnd_toStartOf="@+id/tv_commit"
        binding:layout_constraintHorizontal_chainStyle="packed"
        binding:layout_constraintStart_toStartOf="parent"
        binding:layout_constraintTop_toBottomOf="@+id/tv_edit" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_commit"
        android:layout_width="125dp"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/icon_withdraw_bg"
        android:gravity="center"
        android:padding="0dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:sCorners="4dp"
        app:sSolidColor="@color/_FFBD2A"
        app:sStrokeColor="@color/_3A3A3A"
        app:sStrokeWidth="0dp"
        binding:layout_constraintBottom_toBottomOf="parent"
        binding:layout_constraintEnd_toEndOf="parent"
        binding:layout_constraintStart_toEndOf="@+id/tv_cancle"
        binding:layout_constraintTop_toBottomOf="@+id/tv_edit" />


</androidx.constraintlayout.widget.ConstraintLayout>

