<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_avatar_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/_FFBD2A"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_avatar_alpha"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black40"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/dimen70"
                android:layout_height="@dimen/dimen70"
                android:layout_marginStart="@dimen/dimen20"
                android:layout_marginBottom="@dimen/dimen20"
                android:src="@drawable/icon_placeholder"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/cl_info"
                app:layout_constraintStart_toStartOf="parent" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lv_avatar"
                android:layout_width="@dimen/dimen70"
                android:layout_height="@dimen/dimen70"
                app:lottie_fileName="lottie_avatar.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:layout_constraintTop_toTopOf="@+id/iv_avatar"
                app:layout_constraintStart_toStartOf="@+id/iv_avatar"
                app:layout_constraintEnd_toEndOf="@id/iv_avatar"
                app:layout_constraintBottom_toBottomOf="@+id/iv_avatar" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxEms="6"
                android:singleLine="true"
                android:text="番茄会害羞番茄会害羞番茄会害羞番茄会害羞番茄会害羞"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

            <leifu.shapelibrary.ShapeView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen20"
                android:layout_marginTop="@dimen/dimen5"
                android:drawableStart="@drawable/icon_home_girl"
                android:drawablePadding="@dimen/dimen3"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/dimen5"
                android:paddingTop="0dp"
                android:paddingEnd="@dimen/dimen5"
                android:paddingBottom="0dp"
                android:text="19岁  准格尔"
                android:textColor="@color/_F27E9A"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                app:sCorners="10dp"
                app:sSizeHeight="@dimen/dimen20"
                app:sSolidColor="@color/black60"
                app:sStrokeWidth="0dp" />

            <TextView
                android:id="@+id/tv_doing"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen35"
                android:layout_marginBottom="18dp"
                android:background="@drawable/icon_manager_label_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="@dimen/dimen9"
                android:paddingEnd="@dimen/dimen9"
                android:paddingBottom="@dimen/dimen5"
                android:singleLine="true"
                android:text="正在刷抖音求分享沙雕视频…"
                android:textColor="@color/_FBB426"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/iv_avatar"
                app:layout_constraintStart_toStartOf="@+id/iv_avatar" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen340"
                android:background="@drawable/shape_white_top20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen20"
                    android:layout_marginBottom="@dimen/dimen5"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_desc5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/icon_manager_desc" />

                <TextView
                    android:id="@+id/tv_desc5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="40dp"
                    android:text="个性签名："
                    android:textColor="@color/_993A3A3A"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rv_card" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/_3A3A3A"
                    android:textSize="14sp"
                    android:text="TA正在打王者，快来和我一起上分吧！TA正在打王者，快来和我一起上分吧！"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tv_desc5"
                    app:layout_constraintTop_toTopOf="@+id/tv_desc5" />


                <ImageView
                    android:id="@+id/tv_think_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen20"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/icon_home_title_think_big"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_desc" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="@dimen/dimen0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen20"
                    android:layout_marginTop="@dimen/dimen30"
                    android:layout_marginEnd="@dimen/dimen20"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_think_title" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen84"
        android:background="@color/white0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen15"
            android:layout_marginBottom="@dimen/dimen8"
            android:padding="@dimen/dimen5"
            android:src="@drawable/icon_back_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_back" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_chat"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen38"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="0dp"
        android:text="去聊天"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:sCorners="8dp"
        app:sSolidColor="@color/_FFBD2A"
        app:sStrokeColor="@color/_3A3A3A"
        app:sStrokeWidth="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>