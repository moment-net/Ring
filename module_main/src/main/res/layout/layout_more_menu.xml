<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_more"
    android:layout_width="88dp"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_chat_morebg">

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="举报"
        android:textColor="@color/white"
        android:textSize="13sp"
        binding:layout_constraintEnd_toEndOf="parent"
        binding:layout_constraintStart_toStartOf="parent"
        binding:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white10"
        binding:layout_constraintEnd_toEndOf="parent"
        binding:layout_constraintStart_toStartOf="parent"
        binding:layout_constraintTop_toBottomOf="@+id/tv_report" />

    <TextView
        android:id="@+id/tv_shield"
        android:layout_width="88dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:text="屏蔽"
        android:textColor="@color/white"
        android:textSize="13sp"
        binding:layout_constraintBottom_toBottomOf="parent"
        binding:layout_constraintEnd_toEndOf="parent"
        binding:layout_constraintStart_toStartOf="parent"
        binding:layout_constraintTop_toBottomOf="@+id/view_line" />


</androidx.constraintlayout.widget.ConstraintLayout>