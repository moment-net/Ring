<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dimen380">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="1:56:35"
        android:textColor="@color/_221800"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_qa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintStart_toEndOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/tv_time"
        app:srcCompat="@drawable/icon_state_qa" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离中午饭点匹配结束还剩"
        android:textColor="@color/_3A3A3A"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_set"
        android:layout_width="@dimen/dimen68"
        android:layout_height="@dimen/dimen20"
        android:layout_marginTop="10dp"
        android:text="匹配设置"
        android:textColor="@color/_3A3A3A"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_info"
        android:padding="0dp"
        app:sCorners="4dp"
        app:sSolidColor="@color/white"
        app:sStrokeColor="@color/_3A3A3A"
        app:sStrokeWidth="1dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tv_stop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_set" />

    <TextView
        android:id="@+id/tv_stop"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen40"
        android:layout_marginBottom="@dimen/dimen30"
        android:gravity="center"
        android:padding="0dp"
        android:text="停止匹配"
        android:textColor="@color/_803A3A3A"
        android:textSize="15sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_state" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="以下饭点时间才可以匹配哦！\n饭点时间：\n中午 11:30-1:30\n下午 5:30-8:00\n晚上10:00-12:00"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_set" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_commit"
        android:layout_width="@dimen/dimen200"
        android:layout_height="@dimen/dimen40"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:padding="0dp"
        android:text="我知道了"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        app:sCorners="6dp"
        app:sSolidColor="@color/_FFBF2F"
        app:sStrokeColor="@color/_FFBD00"
        app:sStrokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>