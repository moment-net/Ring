<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dimen52"
        android:layout_height="@dimen/dimen52"
        android:src="@drawable/icon_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/dimen2"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxEms="8"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/_3A3A3A"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dimen4"
        android:src="@drawable/icon_chat_ok"
        app:layout_constraintBottom_toBottomOf="@+id/tv_msg"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_msg"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text=""
        android:textColor="@color/_803A3A3A"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/iv_read"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />


    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen20"
        android:paddingStart="@dimen/dimen10"
        android:paddingTop="@dimen/dimen0"
        android:paddingEnd="@dimen/dimen10"
        android:paddingBottom="@dimen/dimen0"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:sCorners="10dp"
        app:sSolidColor="@color/_FF6576"
        app:sStrokeColor="@color/_3A3A3A"
        app:sStrokeWidth="0dp" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/_A2A2A2"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_msg" />


</androidx.constraintlayout.widget.ConstraintLayout>