<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_label_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sCorners="14dp"
        app:sSolidColor="@color/_F4F4F4"
        app:sStrokeWidth="0dp" />

    <ImageView
        android:id="@+id/iv_label"
        android:layout_width="@dimen/dimen22"
        android:layout_height="@dimen/dimen22"
        android:layout_marginStart="@dimen/dimen3"
        android:src="@drawable/icon_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩游戏"
        android:textColor="@color/_9C9C9C"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/dimen4"
        android:layout_marginEnd="@dimen/dimen8"
        android:layout_marginBottom="@dimen/dimen1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_label"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line"
        android:layout_width="@dimen/dimen1"
        android:layout_height="@dimen/dimen10"
        android:background="@color/_1A515FFF"
        android:layout_marginStart="@dimen/dimen5"
        app:layout_constraintStart_toEndOf="@+id/tv_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="玩游戏"
        android:textColor="@color/_9C9C9C"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/dimen4"
        android:layout_marginEnd="@dimen/dimen8"
        android:layout_marginBottom="@dimen/dimen1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_line"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>