<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white10"
    android:elevation="@dimen/dimen5">


    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dimen90"
        android:layout_height="@dimen/dimen90"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_placeholder" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lineSpacingExtra="@dimen/dimen0"
        android:maxLines="2"
        android:text="今天小李要喝三杯水李要喝三杯水今天小李要喝三杯水李要喝三杯水"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_subscribe"
        android:layout_width="@dimen/dimen60"
        android:layout_height="@dimen/dimen26"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:padding="0dp"
        android:text="订阅"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:sCorners="6dp"
        app:sSolidColor="@color/_FFBD2A"
        app:sStrokeColor="@color/_3A3A3A"
        app:sStrokeWidth="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>