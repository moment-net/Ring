<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_F9F9F9">


    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/srl_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top_hide"
        android:layout_width="@dimen/dimen0"
        android:layout_height="@dimen/dimen172"
        android:alpha="0"
        android:background="@drawable/icon_home_top_bg"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/iv_avatar_hide"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/dimen64"
            android:background="@drawable/icon_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_hide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/dimen20"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="今天也要吃"
            android:textColor="@color/_3A3A3A"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_avatar_hide"
            app:layout_constraintEnd_toStartOf="@+id/iv_filter_hide"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar_hide"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar_hide" />

        <ImageView
            android:id="@+id/iv_filter_hide"
            android:layout_width="@dimen/dimen66"
            android:layout_height="@dimen/dimen35"
            android:layout_marginEnd="@dimen/dimen17"
            android:src="@drawable/icon_home_filter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar_hide" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_ring_hide"
            android:layout_width="160dp"
            android:layout_height="@dimen/dimen60"
            android:layout_marginTop="11dp"
            android:background="@drawable/icon_home_match_bg"
            app:layout_constraintStart_toStartOf="@+id/iv_avatar_hide"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar_hide">

            <ImageView
                android:id="@+id/main_imageview71_hide"
                android:layout_width="@dimen/dimen24"
                android:layout_height="@dimen/dimen24"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_home_ring" />

            <ImageView
                android:id="@+id/main_imageview81_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="@dimen/dimen13"
                app:layout_constraintStart_toEndOf="@+id/main_imageview71_hide"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_home_title_ring_hide" />

            <TextView
                android:id="@+id/main_textview90_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现有趣的人会Ring"
                android:textColor="@color/_B33A3A3A"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/main_imageview81_hide"
                app:layout_constraintTop_toBottomOf="@+id/main_imageview81_hide" />

            <TextView
                android:id="@+id/tv_status_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen3"
                android:background="@drawable/icon_home_status_bg"
                android:gravity="center"
                android:text="ON"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_match_hide"
            android:layout_width="160dp"
            android:layout_height="@dimen/dimen60"
            android:layout_marginTop="@dimen/dimen11"
            android:layout_marginEnd="@dimen/dimen20"
            android:background="@drawable/icon_home_match_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar_hide">

            <ImageView
                android:id="@+id/main_imageview3_hide"
                android:layout_width="@dimen/dimen24"
                android:layout_height="@dimen/dimen24"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_home_match" />

            <ImageView
                android:id="@+id/main_imageview6_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                app:layout_constraintStart_toEndOf="@+id/main_imageview3_hide"
                app:layout_constraintTop_toTopOf="@+id/main_imageview3_hide"
                app:srcCompat="@drawable/icon_home_title_fastmatch_hide" />

            <TextView
                android:id="@+id/tv_ring_num_hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen2"
                android:text="今日剩余5次"
                android:textColor="@color/_B33A3A3A"
                android:textSize="8sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/main_imageview6_hide"
                app:layout_constraintTop_toBottomOf="@+id/main_imageview6_hide" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/dimen60"
        android:layout_height="@dimen/dimen69"
        android:src="@drawable/icon_home_push"
        android:layout_marginBottom="@dimen/dimen180"
        android:layout_marginEnd="@dimen/dimen15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>