<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen532"
        android:background="@drawable/shape_home_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/dimen46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/icon_placeholder" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/dimen20"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="今天也要吃"
        android:textColor="@color/_221800"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintEnd_toStartOf="@+id/tv_state"
        app:layout_constraintStart_toEndOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_state"
        android:layout_width="@dimen/dimen136"
        android:layout_height="@dimen/dimen28"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/icon_home_cooked"
        android:drawablePadding="@dimen/dimen4"
        android:text="正在匹配饭友…"
        android:textColor="@color/_221800"
        android:textSize="14sp"
        android:paddingTop="@dimen/dimen0"
        android:paddingBottom="@dimen/dimen0"
        android:paddingStart="@dimen/dimen11"
        android:paddingEnd="@dimen/dimen11"
        app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_avatar"
        app:sCorners="14dp"
        app:sSolidColor="@color/_FFBD2A"
        app:sStrokeColor="@color/_3A3A3A"
        app:sStrokeWidth="0dp" />

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/srf_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dimen80">

                <ImageView
                    android:id="@+id/main_imageview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/icon_home_manager" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:paddingStart="@dimen/dimen10"
                    android:paddingEnd="@dimen/dimen10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_imageview5" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/dimen64"
        android:layout_height="@dimen/dimen64"
        android:src="@drawable/icon_main_add"
        android:layout_marginBottom="@dimen/dimen115"
        android:layout_marginEnd="@dimen/dimen15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>