<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectAppearanceActivity">


    <ImageView
        android:id="@+id/main_imageview9"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen354"
        android:background="@color/_FFD148"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="状态"
        android:textColor="@color/black"
        android:textSize="@dimen/sp18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_jump"
        android:layout_width="@dimen/dimen54"
        android:layout_height="@dimen/dimen28"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:padding="@dimen/dimen0"
        android:text="跳过"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />


    <ImageView
        android:id="@+id/main_imageview7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen2"
        app:layout_constraintBottom_toBottomOf="@+id/main_imageview9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icon_state_top" />

    <TextView
        android:id="@+id/main_textview17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="你现在的状态是？"
        android:textColor="@color/_3A3A3A"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_imageview9" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_textview17" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_next"
        android:layout_width="@dimen/dimen200"
        android:layout_height="@dimen/dimen40"
        android:layout_marginBottom="55dp"
        android:padding="@dimen/dimen0"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:sCorners="6dp"
        app:sSolidColor="@color/_FFBD2A"
        app:sStrokeColor="@color/_3A3A3A"
        app:sStrokeWidth="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>