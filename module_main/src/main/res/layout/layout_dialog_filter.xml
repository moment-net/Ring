<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white12">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="筛选"
        android:textColor="@color/_221800"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:padding="@dimen/dimen5"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:srcCompat="@drawable/icon_dialog_close" />

    <TextView
        android:id="@+id/main_textview16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:text="匹配"
        android:textColor="@color/_3A3A3A"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_boy"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginStart="30dp"
        android:text="男生"
        android:gravity="center"
        android:textColor="@color/_9C9C9C"
        android:textSize="14sp"
        android:padding="0dp"
        app:sCorners="14dp"
        app:sSolidColor="@color/_F4F4F4"
        app:sStrokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_textview16"
        app:layout_constraintStart_toEndOf="@+id/main_textview16"
        app:layout_constraintTop_toTopOf="@+id/main_textview16" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_girl"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:text="女生"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:padding="0dp"
        app:sCorners="14dp"
        app:sSolidColor="@color/_FFD54A"
        app:sStrokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_boy"
        app:layout_constraintStart_toEndOf="@+id/tv_boy"
        app:layout_constraintTop_toTopOf="@+id/tv_boy" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_all"
        android:layout_width="60dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:text="不限"
        android:gravity="center"
        android:textColor="@color/_9C9C9C"
        android:textSize="14sp"
        android:padding="0dp"
        app:sCorners="14dp"
        app:sSolidColor="@color/_F4F4F4"
        app:sStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="@+id/tv_boy"
        app:layout_constraintTop_toBottomOf="@+id/tv_boy" />

    <leifu.shapelibrary.ShapeView
        android:id="@+id/tv_commit"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen40"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="@dimen/dimen50"
        android:layout_marginEnd="@dimen/dimen50"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="0dp"
        app:sCorners="6dp"
        app:sSolidColor="@color/_FFBF2F"
        app:sStrokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_all" />


</androidx.constraintlayout.widget.ConstraintLayout>