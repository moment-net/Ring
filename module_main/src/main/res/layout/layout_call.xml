<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.alan.mvvm.common.views.BottomToTopFinishLayout
        android:id="@+id/cl_finish"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen110"
        android:layout_marginTop="@dimen/dimen60"
        android:background="@drawable/shape_chat8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_placeholder"
                app:layout_constraintEnd_toStartOf="@+id/tv_name"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="番茄会害羞正在邀请你边吃边聊"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_avatar"
                app:layout_constraintTop_toTopOf="@+id/iv_avatar" />

            <leifu.shapelibrary.ShapeView
                android:id="@+id/tv_chat"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="聊一聊"
                android:textColor="@color/_FFBD2A"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_cancel"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:sCorners="6dp"
                app:sSolidColor="@color/white"
                app:sStrokeWidth="0dp" />

            <leifu.shapelibrary.ShapeView
                android:id="@+id/tv_cancel"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="忽略"
                android:textColor="@color/_FFBD2A"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_chat"
                app:sCorners="6dp"
                app:sSolidColor="@color/white"
                app:sStrokeWidth="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.alan.mvvm.common.views.BottomToTopFinishLayout>


</androidx.constraintlayout.widget.ConstraintLayout>